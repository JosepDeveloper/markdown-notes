---
import NoteIcon from './icons/note-icon.astro';
import LogoutIcon from './icons/logout-icon.astro';
import '@fontsource/luckiest-guy'

interface Props {
  class?: string;
}

const {class: className} = Astro.props;
---

<article class={`${className} flex flex-col items-center gap-2`}>
  <h1 class={"text-3xl text-balance font-normal flex"}>Markdown Notes</h1>

  <nav class="mt-10">
    <a href="#" class="text-balance flex items-center">
      <NoteIcon class="w-6 h-6"/>
      <span class="ml-2 hover:underline">Nueva Nota</span>
    </a>
  </nav>

  <button class="py-2.5 px-5 me-2 mb-2 font-medium text-gray-900 focus:outline-none bg-white rounded-full border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 text-xs flex justify-center items-center" id="logout"> <LogoutIcon class="w-6 h-6"/> Cerrar Sesi√≥n </button>
</article>


<style>
  h1 {
    font-family: 'Luckiest Guy', cursive;
  }
</style>

<script>
  import {$} from "../lib/dom";

  const $logout = $('#logout') as HTMLButtonElement

  $logout?.addEventListener('click', async () => {
    localStorage.removeItem('username')
    window.location.href = '/login'
  })
</script>